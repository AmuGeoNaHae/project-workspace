<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.team.webproject.mapper.LoginMapper">
	
	<select id="checkId">
		SELECT count(*) FROM members WHERE member_id = #{member_id}
	</select>
	
	<select id="getAdmin">
		SELECT admin_id, admin_pwd FROM administrators;
	</select>
	
	<insert id="add">
		INSERT INTO members VALUES(
			member_code_seq.nextval,
			#{member_id},
			#{member_pwd},
			#{member_name},
			#{member_birth},
			#{member_phone},
			#{member_email})
	</insert>
	
	<select id="getAll">
		SELECT member_id, member_pwd FROM members
	</select>
	
	<!-- 카카오 로그인 sql -->
	<insert id="insertOauthMember" parameterType="TestUserDTO">
		INSERT INTO
			test_user(member_id, member_password, member_nickname, member_email)
		VALUES(#{member_id}, #{member_password}, #{member_nickname}, #{member_email})
	</insert>
	<select id="findByMemberEmail" resultType="TestUserDTO" parameterType="string">
		SELECT * FROM test_user WHERE member_email=#{email}
	</select>
</mapper>